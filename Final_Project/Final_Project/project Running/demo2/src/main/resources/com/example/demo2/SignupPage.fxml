<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="872.0" prefWidth="1178.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo2.signupPageController">
   <children>
      <VBox fillWidth="false" layoutX="4.0" layoutY="16.0" prefHeight="838.0" prefWidth="1170.0">
         <children>
            <Label alignment="CENTER" prefHeight="101.0" prefWidth="1146.0" text="SET UP YOUR POFILE" textAlignment="CENTER" textFill="#8c5681">
               <font>
                  <Font name="Franklin Gothic Heavy" size="77.0" />
               </font>
            </Label>
            <VBox alignment="CENTER" fillWidth="false" opacity="0.83" prefHeight="655.0" prefWidth="1247.0" spacing="20.0">
               <children>
                  <Label prefHeight="0.0" prefWidth="644.0" text="set User Name" />
                  <TextField fx:id="usernameField" prefHeight="40.0" prefWidth="650.0" promptText="enter unique user name">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </TextField>
                  <Label prefHeight="28.0" prefWidth="648.0" text="set Password" />
                  <TextField fx:id="PasswordField" prefHeight="40.0" prefWidth="650.0" promptText="put complex password " />
                  <Label prefHeight="28.0" prefWidth="641.0" text="email" />
                  <TextField fx:id="EmailField" prefHeight="40.0" prefWidth="650.0" promptText="email should include '@'" />
                  <Label prefHeight="28.0" prefWidth="645.0" text="bio" />
                  <TextField fx:id="bioField" prefHeight="40.0" prefWidth="650.0" promptText="Express yourself !" />
                  <Label prefHeight="33.0" prefWidth="651.0" text=" set your Privacy" />
                  <HBox alignment="CENTER_LEFT" fillHeight="false" prefHeight="43.0" prefWidth="643.0" spacing="30.0">
                     <children>
                        <RadioButton fx:id="privateAccount" mnemonicParsing="false" prefHeight="28.0" prefWidth="196.0" text="private Account">
                           <toggleGroup>
                              <ToggleGroup fx:id="privacy" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="PublicAccount" mnemonicParsing="false" text="Public Account" toggleGroup="$privacy" />
                     </children>
                  </HBox>
                  <Label fx:id="FeedBack" prefHeight="28.0" prefWidth="648.0" textFill="#e41515" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </VBox>
            <AnchorPane prefHeight="42.0" prefWidth="235.0">
               <VBox.margin>
                  <Insets bottom="5.0" left="800.0" right="5.0" top="5.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="setProfile" layoutX="-4.0" layoutY="1.0" mnemonicParsing="false" onAction="#setUpProfileButtonAction" prefHeight="40.0" prefWidth="152.0" text="Set Profile" />
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
